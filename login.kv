<LoginScreen>:
    BoxLayout:
        orientation: 'vertical'
        padding: 20
        spacing: 20

        canvas.before:
            Color:
                rgba: .94, .95, .96, 1
            Rectangle:
                pos: self.pos
                size: self.size

        # Header
        BoxLayout:
            size_hint_y: None
            height: 80
            canvas.before:
                Color:
                    rgba: 0.18, 0.50, 0.93, 1
                Rectangle:
                    pos: self.pos
                    size: self.size

            Label:
                text: "Welcome to BankKo"
                font_size: 24
                bold: True
                color: 1, 1, 1, 1
                halign: "center"
                valign: "middle"

        # Email
        Label:
            text: "Username (Email):"
            font_size: 16
            size_hint_y: None
            height: 30
            color: 0, 0, 0, 1

        TextInput:
            id: email_input
            multiline: False
            font_size: 16
            size_hint_y: None
            height: 40

        # Password
        Label:
            text: "Password:"
            font_size: 16
            size_hint_y: None
            height: 30
            color: 0, 0, 0, 1

        TextInput:
            id: password_input
            password: True
            multiline: False
            font_size: 16
            size_hint_y: None
            height: 40

        # Buttons
        BoxLayout:
            spacing: 10
            size_hint_y: None
            height: 50

            Button:
                text: "Login"
                background_color: 0.18, 0.50, 0.93, 1
                color: 1, 1, 1, 1
                bold: True
                on_press: root.login()

            Button:
                text: "Sign Up"
                background_color: 0.30, 0.69, 0.31, 1
                color: 1, 1, 1, 1
                bold: True
                on_press: root.signup()
